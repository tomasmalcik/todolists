<div class="row optionGroup general-options">
    <div class="col-lg-10 offset-lg-1 set-avatar optionList">
      <h3>Avatar settings</h3>
      <div class="row">
          <div class="col-lg-4">
              <img src="" alt="avatar" class="img-fluid optionAvatar"/>
          </div>
          <div class="col-lg-6 offset-lg-2">
              <form onsubmit="updateAvatar(event)" id="updateAvatar">
                  <div class="form-group">
                      <span for="avatarInput">Select new avatar</span>
                      <input class="form-control" type="file" name="avatarInput" id="avatarInput" accept="image/png, image/gif, image/jpeg" required>
                  </div>
                  <button type="submit" class="btn btn-outline-dark" style="margin-top:30px;">Update Avatar</button>  
              </form>
          </div>
      </div>
    </div>
    <div class="col-lg-10 offset-lg-1 credentials optionList">
      <h3>Name settings</h3>
      <form onsubmit="updateCredentials(event)">
          <div class="row">
              <div class="col-lg-6">
                  <div class="form-group">
                      <input type="text" class="form-control" name="username" id="username" required/>
                      <span class="highlight"></span>
                      <label for="email">First Name</label>
                  </div>
              </div>
              <div class="col-lg-6">
                  <div class="form-group">
                      <input type="text" class="form-control" name="usersurname" id="usersurname" required/>
                      <span class="highlight"></span>
                      <label for="email">Surname</label>
                  </div>
              </div>
          </div>
          <div class="form-group">
              <button type="submit" class="btn btn-outline-dark">Update Credentials</button>
          </div>
      </form>
    </div>
</div>